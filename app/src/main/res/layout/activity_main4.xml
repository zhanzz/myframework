<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.framework.common.widget.TitleView
        xmlns:title="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        title:title_name="标题" />

    <Button
        android:id="@+id/btn_4jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是4jump"/>

    <ImageView
        android:id="@+id/iv_matrix"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="matrix"
        android:src="@drawable/ic_empty_product" />

    <androidx.slidingpanelayout.widget.SlidingPaneLayout
        android:id="@+id/slidingPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:gravity="center_horizontal"
            android:text="左侧菜单"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_left2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:gravity="center_horizontal"
            android:text="左侧菜单"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:text="这是内容"
            android:textSize="24sp" />
    </androidx.slidingpanelayout.widget.SlidingPaneLayout>

    <com.example.retrofitframemwork.widget.TestViewDrag
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="我是one"
            android:background="#ff0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="我是two"
            android:background="#f0f"/>
    </com.example.retrofitframemwork.widget.TestViewDrag>
</LinearLayout>
