<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.retrofitframemwork.login.activity.MainActivity">

    <com.framework.common.widget.TitleView
        android:id="@+id/title_bar"
        xmlns:title="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        title:layout_constraintTop_toTopOf="parent"
        title:title_name="标题" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:visibility="visible"
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">

        <com.example.demo.widget.TwoLevelRefreshHeader
            android:id="@+id/twoLevelHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlMaxRage="2.5"
            app:srlFloorRage="0.6"
            app:srlRefreshRage="0.3">

            <com.example.demo.widget.ActivityTwoRefreshHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.example.demo.widget.TwoLevelRefreshHeader>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
