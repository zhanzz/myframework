<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <com.example.demo.product_detail.NestedScrollingParent2Layout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="product_detail"
            class="com.example.demo.product_detail.fragment.ProductDetailFragment"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="web_product"
            class="com.example.demo.product_detail.fragment.WebViewFragment"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="product_tui"
            class="com.example.demo.product_detail.fragment.TuiProductFragment"/>
    </com.example.demo.product_detail.NestedScrollingParent2Layout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magic_indicator"
                android:layout_width="match_parent"
                android:layout_height="37dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    style="@style/register_label"
                    android:text="手机号码" />

                <com.example.demo.widget.ClearEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/d38"
                    android:paddingRight="@dimen/d16"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/register_label"
                    android:text="短信验证码" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"/>

                <com.example.demo.widget.CountDownButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="startCount" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d15">

                <TextView
                    style="@style/register_label"
                    android:text="短信验证码" />

                <com.example.demo.widget.ClearEditText
                    android:id="@+id/et_verification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:paddingLeft="@dimen/d24"
                    android:paddingRight="@dimen/d16"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

                <com.example.demo.widget.CountDownButton
                    android:id="@+id/tv_get_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:onClick="startCount"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:text="11111111111111" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:text="2222222222222" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="test" />
        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:layout_width="match_parent"
                android:layout_height="37dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    style="@style/register_label"
                    android:text="手机号码" />

                <com.example.demo.widget.ClearEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/d38"
                    android:paddingRight="@dimen/d16"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d15">

                <TextView
                    style="@style/register_label"
                    android:text="短信验证码" />

                <com.example.demo.widget.ClearEditText
                    android:id="@+id/et_verification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:paddingLeft="@dimen/d24"
                    android:paddingRight="@dimen/d16"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

                <com.example.demo.widget.CountDownButton
                    android:id="@+id/tv_get_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:onClick="startCount"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d15">

                <TextView
                    style="@style/register_label"
                    android:text="设置密码" />

                <com.example.demo.widget.ClearEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请设置密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/d38"
                    android:paddingRight="@dimen/d16"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d15">

                <TextView
                    style="@style/register_label"
                    android:text="确认密码" />

                <com.example.demo.widget.ClearEditText
                    android:id="@+id/et_password_again"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/d38"
                    android:paddingRight="@dimen/d16"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d15">

                <TextView
                    style="@style/register_label"
                    android:text="行业" />

                <TextView
                    android:id="@+id/tv_select_industry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择行业"
                    android:inputType="text"
                    android:paddingLeft="68dp"
                    android:paddingRight="@dimen/d16"
                    android:textColor="#212121"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_company_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d48"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/d15">

                    <TextView
                        style="@style/register_label"
                        android:text="企业类型" />

                    <TextView
                        android:id="@+id/tv_select_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请选择企业类型"
                        android:inputType="text"
                        android:paddingLeft="38dp"
                        android:paddingRight="@dimen/d16"
                        android:textColor="#212121"
                        android:textColorHint="@color/c_999999"
                        android:textSize="@dimen/s14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d48"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/d15">

                    <TextView
                        style="@style/register_label"
                        android:text="企业名称" />

                    <com.example.demo.widget.ClearEditText
                        android:id="@+id/et_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入企业名称"
                        android:inputType="text"
                        android:paddingLeft="@dimen/d38"
                        android:paddingRight="@dimen/d16"
                        android:textColor="@color/c_333333"
                        android:textColorHint="@color/c_999999"
                        android:textSize="@dimen/s14" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/tv_label"
                        style="@style/register_label"
                        android:layout_height="44dp"
                        android:text="企业名称" />

                    <FrameLayout
                        android:id="@+id/frame_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/tv_label"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/img_id_3"
                            android:layout_width="100dp"
                            android:layout_height="66dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            fresco:placeholderImageScaleType="centerInside"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_card3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/frame_container"
                        android:layout_alignLeft="@+id/frame_container"
                        android:layout_alignRight="@+id/frame_container"
                        android:gravity="center"
                        android:text="上传营业执照"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_card3"
                        android:layout_alignLeft="@+id/tv_card3"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="20dp"
                        android:text="仅支持JPG、JPEG及PNG，大小不超过1M"
                        android:textColor="#999"
                        android:textSize="11sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d48"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/d15">

                    <TextView
                        style="@style/register_label"
                        android:text="所在地区" />

                    <TextView
                        android:id="@+id/tv_select_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="省/市/区"
                        android:inputType="text"
                        android:paddingLeft="38dp"
                        android:paddingRight="@dimen/d16"
                        android:textColor="#212121"
                        android:textColorHint="@color/c_999999"
                        android:textSize="@dimen/s14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d48"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/d15">

                    <TextView
                        style="@style/register_label"
                        android:text="企业地址" />

                    <com.example.demo.widget.ClearEditText
                        android:id="@+id/et_company_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入企业地址"
                        android:inputType="text"
                        android:paddingLeft="@dimen/d38"
                        android:paddingRight="@dimen/d16"
                        android:textColor="@color/c_333333"
                        android:textColorHint="@color/c_999999"
                        android:textSize="@dimen/s14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d15">

                <TextView
                    style="@style/register_label"
                    android:text="邀请口令   " />

                <com.example.demo.widget.ClearEditText
                    android:id="@+id/et_passcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入邀请口令"
                    android:inputType="text"
                    android:paddingLeft="@dimen/d38"
                    android:paddingRight="@dimen/d16"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/id_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawablePadding="10dp"
                    android:padding="0dp"
                    android:text="同意"
                    android:textColor="#aa000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_tv_register_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《蜘点订货通用户注册协议》"
                    android:textColor="#3B9FFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_tv_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《隐私协议》"
                    android:textColor="#3B9FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="20dp"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
