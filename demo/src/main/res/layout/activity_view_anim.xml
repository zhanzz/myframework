<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <ImageView
        android:id="@+id/frame_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/translation_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_0"/>

    <ImageView
        android:id="@+id/rotate_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_1"/>

    <ImageView
        android:id="@+id/alpha_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_2"/>
    <ImageView
        android:id="@+id/scale_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_2"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#0000ff"/>
</LinearLayout>
