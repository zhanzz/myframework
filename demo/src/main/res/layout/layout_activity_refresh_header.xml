<?xml version="1.0" encoding="utf-8"?><!-- 下拉刷新 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_red_packet"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/pull_to_refresh_header_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="@+id/tv_head_tip"
        app:layout_constraintRight_toLeftOf="@+id/tv_head_tip"/>

    <ImageView
        android:id="@+id/pull_to_refresh_header_progress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="@+id/tv_head_tip"
        app:layout_constraintRight_toLeftOf="@+id/tv_head_tip"/>

    <TextView
        android:id="@+id/tv_head_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:textSize="13sp"
        tool:text="下拉刷新"/>

    <TextView
        android:id="@+id/pull_to_refresh_header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_head_tip"
        app:layout_constraintLeft_toLeftOf="@+id/tv_head_tip"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@+id/tv_head_tip"
        android:textColor="#fff"
        android:textSize="12sp"
        tool:text="04:50:22"/>
</androidx.constraintlayout.widget.ConstraintLayout>

