<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_product_container_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_square_white"
    android:paddingBottom="12dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_good"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_good_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_below="@id/img_good"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:lines="2"
        android:ellipsize="end"
        android:text="Hello world"
        android:textColor="#333"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_below="@id/txt_good_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_sales_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_below="@id/txt_good_name"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="#999999"
        android:textSize="11sp" />

    <View
        android:id="@+id/view_spliter"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/tv_sales_count"
        android:layout_marginTop="5dp"
        android:layerType="software"/>

    <TextView
        android:id="@+id/txt_good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view_spliter"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="56.00"
        android:textColor="#f75b47"
        android:textSize="13sp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/txt_good_origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/txt_good_price"
        android:layout_alignBottom="@+id/txt_good_price"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="#999"
        android:textSize="11sp"
        android:text="45"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_good_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_group_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已拼1534件"
        android:textSize="11sp"
        android:textColor="#666"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/txt_good_price"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"/>
</RelativeLayout>